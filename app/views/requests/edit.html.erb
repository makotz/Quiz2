<h1>Support Request Submit Form</h1>

<%= form_for @request do |f|%>
<%= f.label :name %>*:
<%= f.text_field :name, placeholder: "e.g. Michael Jackson"%><br>
<%= f.label :email %>*:
<%= f.text_field :email, placeholder: "e.g. KingofPop@gmail.com"%><br>
Department:
  <%= f.radio_button(:department, "Sales") %>
  <%= f.label(:department_Sales, "Sales") %>
  <%= f.radio_button(:department, "Marketing") %>
  <%= f.label(:department_Marketing, "Marketing") %>
  <%= f.radio_button(:department, "Technical") %>
  <%= f.label(:department_Technical, "Technical") %><br>

<%= f.label :message %>:
  <%= f.text_area :message, placeholder: "Please be specific!" %></div>

  <%= f.submit "Save" %>
<% end %>
